{
  "name": "cryptocurrency-dashboard",
  "version": "1.0.0",
  "description": "Crypto dashboard with CoinMarketCap proxy, details, sparkline, and portfolio",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node backend/server.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "test": "node --test backend/__tests__",
    "test:backend": "node --test backend/__tests__/unit.test.js",
    "test:backend:integration": "node --test backend/__tests__/integration.test.js",
    "test:e2e": "cd frontend-react && npx playwright test",
    "test:e2e:ui": "cd frontend-react && npx playwright test --ui",
    "test:frontend": "cd frontend-react && npm test",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "build": "cd frontend-react && npm run build",
    "preview": "cd frontend-react && npm run preview",
    "ci": "npm run lint && npm run typecheck && npm run test:all",
    "setup": "npm install && cd frontend-react && npm install",
    "clean": "rm -rf node_modules frontend-react/node_modules frontend-react/dist",
    "audit:fix": "npm audit fix && cd frontend-react && npm audit fix"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.9.1",
    "eslint": "^9.39.2",
    "prettier": "^3.4.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "firebase": "^12.6.0",
    "mongodb": "^6.21.0"
  }
}
